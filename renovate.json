{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended", 
    "group:allNonMajor",
    ":separateMultipleMajorReleases",
    ":automergeMinor",
    ":automergePr",
    ":automergeRequireAllStatusChecks",
    ":ignoreUnstable",
    ":enableVulnerabilityAlertsWithLabel(security)",
    ":rebaseStalePrs"
  ],
  "packageRules": [
    {
      "assignees": [
        "MrAlucardDante"
      ],
      "bumpVersion": "patch",
      "commitMessagePrefix": "chore(deps)",
      "labels": [
        "maintenance", 
        "renovate"
      ]
    }
  ]
}
